<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.ui.MainActivity">

    <!-- // TODO remove -->
    <Button
        android:id="@+id/btn_show_tabs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/common_margin"
        android:text="Show Tabs"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_chaos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CHAOS"
        app:layout_constraintBottom_toBottomOf="@+id/btn_show_tabs"
        app:layout_constraintEnd_toStartOf="@+id/btn_load_more"
        app:layout_constraintStart_toEndOf="@+id/btn_show_tabs"
        app:layout_constraintTop_toTopOf="@+id/btn_show_tabs" />

    <!-- // TODO remove load more -->
    <Button
        android:id="@+id/btn_load_more"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/common_margin"
        android:text="LOAD MORE"
        app:layout_constraintBottom_toBottomOf="@+id/btn_show_tabs"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/btn_show_tabs" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_show_tabs" />


</android.support.constraint.ConstraintLayout>